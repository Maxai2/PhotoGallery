<Application x:Class="PhotoGallery.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PhotoGallery"
             StartupUri="MainWindow.xaml">
	<Application.Resources>

		<Style TargetType="Image" x:Key="imgStyle">
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Height" Value="80"/>
			<Setter Property="Width" Value="80"/>
		</Style>

		<Style TargetType="Button" x:Key="btStyle">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
		</Style>

		<Style TargetType="Border" x:Key="brStyle">
			<Setter Property="CornerRadius" Value="25"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="Black"/>
		</Style>
		
		<VisualBrush x:Key="border">
			<VisualBrush.Visual>
				<Border Style="{StaticResource brStyle}" />
			</VisualBrush.Visual>
		</VisualBrush>
		
	</Application.Resources>
</Application>
